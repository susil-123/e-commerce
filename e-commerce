}
//offer_product
public static int offer_product(String fnl_product)
{
    int offer_=0;
    if (fnl_product.equals("football"))
    {
        offer_=20;
    }
    if (fnl_product.equals("baseball"))
    {
        offer_=30;
    }
    if (fnl_product.equals("volleyball"))
    {
        offer_=50;
    }
    if (fnl_product.equals("shuttle"))
    {
        offer_=25;
    }
    return offer_;
}
public static int billing(String prod,String mod,int off)
{
    int amt=0;
    if(prod.equals("football"))
    {amt=500;}
    if(prod.equals("baseball"))
    {amt=300;}
    if(prod.equals("volleyball"))
    {amt=500;}
    if(prod.equals("shuttle"))
    {amt=200;}
    System.out.println("offer applied for "+prod+" of offer "+off+"%");
    return offer(amt,off);

}
public static int offer(int amt,int off)
{
    return amt-(amt/100)*off;
}
public static void admin(String id,String A)
{
    String id_inp;
    System.out.println("Welcome admin...");
    System.out.println("Admin Features available...\n1.find customer..\n2.products..");
    System.out.println("Enter the details you wanna know about...");
    Scanner in_ad = new Scanner(System.in);
    int choice_ad=in_ad.nextInt();
    switch(choice_ad)
    {
        case 1:
        {
            System.out.println("Enter the customer id you wanna know about...");
            id_inp=in_ad.nextLine();
            if(id_inp.equals(id))
            {
                System.out.println("The customer id is: "+id_inp+" customer name is: "+A);
            }
            else
            {
                System.out.println("Invalid id..");
            }
            break;
        }
        case 2:
        {
            Scanner in_pro = new Scanner(System.in);
            int chce= in_pro.nextInt();
            System.out.println("\n1.model 1\n2.model 2\n3.model 3\n4.model 4");
            switch(chce)
            {
                case 1: {
                    System.out.println("football");
                    break;
                }
                case 2: {
                    System.out.println("baseball");
                }
                case 3:
                {
                    System.out.println("volleyball");
                }
                case 4:
                {
                    System.out.println("shuttle");
                }
            }
            break;
        }
    }

}

//end of class
